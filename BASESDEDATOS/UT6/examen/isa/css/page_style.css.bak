/* ---------- #container styles ---------- */

#container {
	margin: 0 auto;
	width: 960px;
	 
}


/* ---------- #header styles ---------- */

#header {
	padding: 10px 10px 0;
	background: #f3f3f3;
	border: 1px solid #dddddd;
	border-top: none;
	height: 120px;
	
}

	.top_nav ul{
		float: right;

		list-style-type: none;
	}

	.top_nav ul li { 
		display: inline; 
	}
	
	hr {
		display: block;
		position: relative;
		margin: 8px auto;
		width: 100%;
		clear: both;
		border: none;
		border-top: 1px solid #AAA;
		border-bottom: 1px solid #FFF;
		font-size: 1px;
		line-height: 0;
		overflow: visible;	
	}
	
	
	.logo {
		float: left;
		margin: 10px 0 0 ;	
	}
	
	.right_nav { 
		width:100%;
		height:30px;
		
	}
		.right_nav ul {
			float: right;
			margin:25px 0 0; 
			padding:0px;
			font-family: Calibri;
			font-size: 23px;
			font-weight: bolder;
			color: #323232;
		}
			
		.right_nav ul li{
			display:inline; 
			height:30px; 
			float:left; 
			list-style:none; 
			margin-left:15px;
		}
		
		.right_nav li a:hover {
